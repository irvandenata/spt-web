<table class="table" id="table1">
  <thead>
    <tr>
      <th width="5%">No.</th>
      <th>Nama Kategori</th>
      <th width="15%">Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0 ; i < categories.length; i++ ) {%>
    <tr>
      <td><%= i+1 %></td>
      <td><%= categories[i].name %></td>
      <td>
        <a
          href="/category/edit/<%= categories[i]._id %>"
          class="btn btn-warning btn-sm"
          >Edit</a
        >
        <form
          action="/category/delete/<%= categories[i]._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger mt-1 ml-1">Hapus</button>
        </form>
      </td>
    </tr>
    <%}%>
  </tbody>
</table>
