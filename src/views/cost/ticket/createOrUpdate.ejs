<div class="page-heading">
	<h3><%-type%> <%-title%></h3>
</div>
<div class="page-content">
	<section class="row">
		<div class="col-12 col-lg-12">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-body">
							<form
								class="form form-vertical"
								action="<%- action %>"
								method="POST"
							>
								<input
									type="hidden"
									name="id"
									value="<% if (typeof ticket != 'undefined') { %> <%= ticket._id %> <% } %>"
								/>
								<div class="form-body">
									<div class="row">
										<div class="col-6">
											<div class="form-group">
												<label for="first-name-vertical">Lokasi Berangkat</label>
												<select name="from" class="select-2 form-control" required>
                          <option value="">Pilih Kabupaten/Kota</option>
                          <% for (let i = 0; i < districts.length; i++) { %>
                            <option value="<%= districts[i]._id %>" <% if (typeof ticket != 'undefined') { %> <% if (ticket.from.id == districts[i]._id) { %> selected <% } %> <% } %> ><%= districts[i].name %></option>
                          <% } %>
                        </select>
											</div>
										</div>
                    	<div class="col-6">
											<div class="form-group">
												<label for="first-name-vertical">Lokasi Tujuan</label>
												<select name="destination" class="select-2 form-control" required>
                          <option value="">Pilih Kabupaten/Kota</option>
                          <% for (let i = 0; i < districts.length; i++) { %>
                            <option value="<%= districts[i]._id %>" <% if (typeof ticket != 'undefined') { %> <% if (ticket.destination.id == districts[i]._id) { %> selected <% } %> <% } %> ><%= districts[i].name %></option>
                          <% } %>
                        </select>
											</div>
										</div>
                    
										<div class="col-12">
											<div class="form-group">
												<label for="first-name-vertical">Nominal Uang (Rp)</label>
												<input
													type="text"
													class="form-control nominal"
													name="nominal"
                       onkeypress="return onlyNumberKey(event)"
													value="<% if (typeof ticket != 'undefined') { %> <%= ticket.nominal %> <% } %>"
													required
													placeholder="Masukan Nominal Uang"
												/>
											</div>
										</div>
										<div class="col-12 d-flex justify-content-end">
											<button type="submit" class="btn btn-primary me-1 mb-1">
												Simpan
											</button>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
